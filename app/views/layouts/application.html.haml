!!!
%html
  %head
    %title Abhineet Singh Bhamra
    %link(rel="icon" type="image/png" href="/images/favicon.png")
    = stylesheet_link_tag "third_party/reset", "../fancybox/jquery.fancybox-1.3.4"
    = stylesheet_link_tag :all
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"
    = javascript_include_tag "third_party/jquery.corner", "application", "third_party/jquery.bgpos.js"
    = javascript_include_tag "../fancybox/jquery.fancybox-1.3.4"
    = javascript_include_tag 'round_me', 'lightbox'
    = csrf_meta_tag
    %meta{'NAME' => 'http-equiv', :content => 'text/html'}/
    %meta{'NAME' => 'description', :content => 'A site by Abhineet Singh Bhamra, for his experiences with photography.'}/
    %meta{'NAME' => 'keywords', :content => 'abhineet,singh,bhamra,photographs,photography,blog,recent'}/
    %meta{'NAME' => "ROBOTS",  :content => "all"}/
  %body
    .header
      .center
        = link_to image_tag("/images/name_logo/name_logo.png"), root_path
    .content.center.white
      = yield
    .footer

:javascript
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-22343101-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
